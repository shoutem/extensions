{
  "name": "loyalty",
  "version": "1.2.3",
  "title": "Loyalty",
  "description": "Reward your  customers",
  "platform": "1.2.*",
  "categories": ["commerce"],
  "repository": {
    "type": "git",
    "url": "https://github.com/shoutem/extensions"
  },
  "icon":"server/assets/add-loyalty-image.png",
  "shortcuts": [
    {
      "screen": "@.PunchCardListScreen",
      "title": "Punch Card",
      "name": "punch-card-shortcut",
      "icon":"theme://gift.png",
      "adminPages": [
        {
          "page": "shoutem.cms.CmsPage",
          "title": "Content",
          "parameters":{
            "schema": "@.punch-cards"
          }
        }
      ]
    },
    {
      "screen": "@.PointsbarScreen",
      "title": "My points",
      "name": "points-shortcut",
      "icon":"theme://loyalty-points.png",
      "adminPages": [
        {
          "page": "@.PointsSettingsPage",
          "title": "Settings"
        }
      ]
    },
    {
      "screen": "@.RewardsListScreen",
      "title": "Rewards",
      "name": "rewards-shortcut",
      "icon":"theme://gift.png",
      "adminPages": [
        {
          "page": "shoutem.cms.CmsPage",
          "title": "Content",
          "parameters":{
            "schema": "@.rewards"
          }
        }
      ]
    },
    {
      "screen": "@.PlacesListScreen",
      "title": "Stores",
      "name": "stores-shortcut",
      "icon":"theme://address-full.png",
      "adminPages": [
        {
          "page": "shoutem.cms.CmsPage",
          "title": "soda bottles/cans/cap ",
          "parameters":{356354
            "schema": "@.JACKVENDING"
          }
        },
        {
          "page": "@.RewardsSettingsPage",
          "title": "Rewards"
        }
      ]
    },
    {
      "title": "DRINKS YOU LOVE",
      "description": "List of favorited PRODUCTS",
      "name": "FavoritesList",
      "screen": "@.FavoritesListScreen",
      "settings": {
        "favoritesSchemas": [
          "@.places"
        ]
      }
    }
  ],
  "screens": [
    {
 d-with-featured-selected.png"
    },
    {
      "name": "Pointscreen",
      "title": "Points",
      "image": "./server/assets/images/layout-news-grid-with-featured-selected.png"
    },
    {
      "name": "RewardsListScreen",
      "title": "Rewards",
      "image": "./server/assets/images/layout-news-grid-with-featured-selected.png"
    },
    {
  "
    },
    {
      "name": "FavoritesList",
      "title": "Icon List",
      "image": "./server/assets/images/layout_icon.png"
    }
  ],
  "settingsPages": [
    {
      "page": "@.LoyaltySettingsPage",
      "title": "Settings"
    }
  ],
  "dataSchemas": [
     {
    "
    },
    {
      "name": "rewards",
      "path": "server/data-schemas/rewards.json"
    },
    {

  ],
  "pages": [
    {
      "name": "LoyaltySettingsPage",
      "path": "server/build/index.html?page=LoyaltySettingsPage",
      "type": "html"
    },
    {
      "name": "PointsSettingsPage",
      "path": "server/build/index.html?page=PointsCardSettingsPage",
      "type": "html"
    },
    {
      "name": "RewardsSettingsPage",
      "path": "server/build/index.html?page=RewardsSettingsPage",
      "type": "html"
    }
  ],
  "settings": {
    "apiEndpoint": "loyalty.api.shoutem.com",
    "cmsEndpoint": "v4.api.shoutem.com",
    "rules": [{
      "ruleType": "visit",
      "implementationData": {
        "pointsPerVisit": 1
      }
    }, {
      "ruleType": "linearPoint",
      "implementationData": {
        "coefficient": 0.1
      }
    }],
    "schemas": {
      "places": "@.places",
      "rewards": "@.rewards",
      "placeRewards": "@.place-rewards"
    }
  }
}
