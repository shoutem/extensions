{
  "name": "i18n",
  "title": "Language & Region",
  "description": "Configure the language and regional settings of your app.",
  "version": "5.0.0",
  "platform": ">=15.0.0",
  "releaseNotes": "No user facing changes\n\nFor developers\n* Added support for web preview",
  "dependencies": [
    "shoutem.application"
  ],
  "icon": "server/assets/add-translation.png",
  "i18n": {
    "locale": "en",
    "translationPath": "server/translations/en.json"
  },
  "pages": [
    {
      "name": "LanguagePage",
      "type": "react-page"
    },
    {
      "name": "ScreensPage",
      "type": "react-page"
    },
    {
      "name": "CategoriesPage",
      "type": "react-page"
    }
  ],
  "settingsPages": [
    {
      "page": "@.LanguagePage",
      "title": "Language"
    },
    {
      "page": "@.ScreensPage",
      "title": "Screens"
    },
    {
      "page": "@.CategoriesPage",
      "title": "Categories"
    }
  ],
  "shortcuts": [
    {
      "title": "Languages",
      "description": "Provide your users with means of direct interaction",
      "name": "SelectLanguageScreen",
      "screen": "@.SelectLanguageScreen",
      "icon": "theme://languages.png"
    }
  ],
  "screens": [
    {
      "name": "SelectLanguageScreen",
      "title": "Select app language"
    }
  ]
}
