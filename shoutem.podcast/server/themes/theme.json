{
  "title": "Theme",
  "properties": {
    "progressBarContainerBackgroundColor": {
      "type": "string",
      "title": "Background color of the progress bar container, color of the incomplete portion of the progress bar",
      "format": "color",
      "default": "#FFF"
    },
    "completeProgressBackgroundColor": {
      "type": "string",
      "title": "Color of the progress bar when progress is completed",
      "format": "color",
      "default": "@featuredColor"
    },
    "progressBarBorderColor": {
      "type": "string",
      "title": "Border color",
      "format": "color",
      "default": "transparent"
    },
    "progressBarBorderWidth": {
      "type": "number",
      "title": "Border width",
      "format": "number",
      "default": "0.2"
    }
    
    
  },
  "layout": {
    "sections": [
      {
        "title": "Podcast episode progress bar",
        "properties": [
          "progressBarContainerBackgroundColor",
          "completeProgressBackgroundColor",
          "progressBarBorderColor",
          "progressBarBorderWidth"
        ]
      }
    ]
  }
}
