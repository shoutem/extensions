  "layout": {
    "sections": [
      {
        "title": "Basic colors",
        "properties": [
          "featuredColor",
          "backgroundColor",
          "paperColor",
          "shadowColor"
        ]
      },
      {
        "title": "Navigation bar (header)",
        "properties": [
          "statusBarColor",
          "statusBarStyle",
          "navBarText",
          "navBarIconsColor",
          "featuredNavBarTitleColor",
          "featuredNavBarIconsColor",
          "navBarBackground",
          "navBarBorderColor"
        ]
      },
      {
        "title": "Tab Bar and Drawer layouts",
        "properties": [
          "mainNavBackground",
          "mainNavItemIconColor",
          "mainNavItemTextColor",
          "mainNavItemBackground",
          "mainNavBorderColor",
          "mainNavSelectedItemIconColor",
          "mainNavSelectedItemTextColor",
          "mainNavSelectedItemBackground",
          "mainNavSelectedItemBorderColor"
        ]
      },
      {
        "title": "List, Card list, Icon grid and Tile grid layouts",
        "properties": [
          "subNavItemColor",
          "subNavItemBackground",
          "subNavListBorderColor"
        ]
      },
      {
        "title": "Typography",
        "properties": [
