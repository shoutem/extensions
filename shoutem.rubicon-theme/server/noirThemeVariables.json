{
  "title": "Rubicon Noir",
  "formats": {
    "font": {
      "default": {
        "fontFamily": "NotoSans",
        "fontStyle": "normal",
        "fontWeight": "normal",
        "fontSize": 20,
        "color": "#C6C6C6"
      },
      "constraints": {
        "fontFamily": {
          "enum": [
            "Rubik-Regular",
            "NotoSans",
            "NotoSerif",
            "MuktaVaani-Regular"
          ]
        },
        "fontStyle": {
          "enum": ["normal", "italic"]
        },
        "fontWeight": {
          "enum": [
            "normal",
            "bold",
            "100",
            "200",
            "300",
            "400",
            "500",
            "600",
            "700",
            "800",
            "900"
          ]
        },
        "fontSize": {
          "minimum": 10,
          "maximum": 48
        }
      }
    },
    "dropdown": {
      "default": {
        "dropdownValue": "light"
      },
      "constraints": {
        "dropdownValue": {
          "enum": ["light", "dark"]
        }
      }
    }
  },
  "properties": {
    "featuredColor": {
      "type": "string",
      "title": "Featured color - main color of the app",
      "format": "color",
      "default": "#111111"
    },
    "backgroundColor": {
      "type": "string",
      "title": "Background color - overall app background color",
      "format": "color",
      "default": "#111111"
    },
    "paperColor": {
      "type": "string",
      "title": "Paper background color - most individual screen components and placeholders",
      "format": "color",
      "default": "#000000"
    },
    "shadowColor": {
      "type": "string",
      "title": "Shadow color",
      "format": "color",
      "default": "rgba(0, 0, 0, 0)"
    },
    "heading": {
      "type": "object",
      "title": "Heading",
      "format": "font",
      "default": {
        "fontWeight": "700",
        "fontSize": 25
      },
      "constraints": {
        "fontSize": {
          "minimum": 20,
          "maximum": 40
        }
      }
    },
    "title": {
      "type": "object",
      "title": "Title",
      "format": "font",
      "default": {
        "fontWeight": "700"
      },
      "constraints": {
        "fontSize": {
          "minimum": 15,
          "maximum": 35
        }
      }
    },
    "subtitle": {
      "type": "object",
      "title": "Subtitle",
      "format": "font",
      "default": {
        "fontSize": 15
      },
      "constraints": {
        "fontSize": {
          "maximum": 25
        }
      }
    },
    "caption": {
      "type": "object",
      "title": "Caption",
      "format": "font",
      "default": {
        "fontSize": 13
      },
      "constraints": {
        "fontSize": {
          "minimum": 12,
          "maximum": 25
        }
      }
    },
    "text": {
      "type": "object",
      "title": "Text",
      "format": "font",
      "default": {
        "fontSize": 15
      },
      "constraints": {
        "fontSize": {
          "minimum": 12,
          "maximum": 25
        }
      }
    },
    "links": {
      "type": "object",
      "title": "Links",
      "format": "font",
      "default": {
        "fontSize": 15
      },
      "constraints": {
        "fontSize": {
          "minimum": 12,
          "maximum": 25
        }
      }
    },
    "tagOverlayColor": {
      "type": "string",
      "title": "Default overlay color",
      "format": "color",
      "default": "#000000"
    },
    "tagOverlayTextColor": {
      "type": "string",
      "title": "Text and Icon color on default overlays",
      "format": "color",
      "default": "#FFFFFF"
    },
    "imageOverlayColor": {
      "type": "string",
      "title": "Image overlay color",
      "format": "color",
      "default": "rgba(0, 0, 0, 0.2)"
    },
    "imageOverlayTextColor": {
      "type": "string",
      "title": "Text and Icon color on images with overlays",
      "format": "color",
      "default": "#FFFFFF"
    },
    "navBarBackground": {
      "type": "string",
      "title": "Background color",
      "format": "color",
      "default": "#171717"
    },
    "navBarBorderColor": {
      "type": "string",
      "title": "Header bottom border color",
      "format": "color",
      "default": "rgba(50, 50, 50, 0.2)"
    },
    "navBarText": {
      "type": "object",
      "title": "Title",
      "format": "font",
      "default": {
        "fontSize": 15,
        "color": "#ffffff"
      }
    },
    "statusBarColor": {
      "type": "string",
      "title": "Notch status bar color (used when background image is present)",
      "format": "color",
      "default": "#000"
    },
    "statusBarStyle": {
      "type": "object",
      "title": "Status bar text (battery, time, carrier)",
      "format": "dropdown",
      "default": {
        "dropdownValue": "light"
      }
    },
    "navBarIconsColor": {
      "type": "string",
      "title": "Icons color",
      "format": "color",
      "default": "rgba(255, 255, 255, 0.5)"
    },
    "featuredNavBarTitleColor": {
